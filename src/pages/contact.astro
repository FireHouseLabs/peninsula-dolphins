---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact">
    <div class="container mx-auto px-6 py-16 md:py-24">
        <div class="max-w-4xl mx-auto text-center mb-12">
            <h1 class="text-4xl md:text-5xl font-extrabold text-primary mb-4">Get in Touch</h1>
            <p class="text-lg text-zinc-600 leading-relaxed">We'd love to hear from you! Whether you have questions about registration, want to get involved, or need more information about the Peninsula Dolphins, we're here to help.</p>
        </div>

        <div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
            <!-- Contact Form -->
            <div class="bg-white rounded-xl shadow-lg p-8">
                <h2 class="text-2xl font-bold text-primary mb-6">Send us a Message</h2>
                
                <form class="space-y-6">
                    <div class="grid md:grid-cols-2 gap-6">
                        <div>
                            <label for="first-name" class="block text-sm font-semibold text-zinc-700 mb-2">First Name *</label>
                            <input type="text" id="first-name" name="first-name" required class="w-full px-4 py-3 border border-zinc-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                        </div>
                        <div>
                            <label for="last-name" class="block text-sm font-semibold text-zinc-700 mb-2">Last Name *</label>
                            <input type="text" id="last-name" name="last-name" required class="w-full px-4 py-3 border border-zinc-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                        </div>
                    </div>

                    <div class="grid md:grid-cols-2 gap-6">
                        <div>
                            <label for="email" class="block text-sm font-semibold text-zinc-700 mb-2">Email Address *</label>
                            <input type="email" id="email" name="email" required class="w-full px-4 py-3 border border-zinc-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                        </div>
                        <div>
                            <label for="phone" class="block text-sm font-semibold text-zinc-700 mb-2">Phone Number</label>
                            <input type="tel" id="phone" name="phone" class="w-full px-4 py-3 border border-zinc-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                        </div>
                    </div>

                    <div>
                        <label for="subject" class="block text-sm font-semibold text-zinc-700 mb-2">Subject *</label>
                        <select id="subject" name="subject" required class="w-full px-4 py-3 border border-zinc-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                            <option value="">Select a topic</option>
                            <option value="registration">Registration Enquiry</option>
                            <option value="general">General Information</option>
                            <option value="sponsorship">Sponsorship Opportunities</option>
                            <option value="volunteering">Volunteering</option>
                            <option value="coaching">Coaching Opportunities</option>
                            <option value="other">Other</option>
                        </select>
                    </div>

                    <div>
                        <label for="message" class="block text-sm font-semibold text-zinc-700 mb-2">Message *</label>
                        <textarea id="message" name="message" rows="5" required class="w-full px-4 py-3 border border-zinc-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="Tell us how we can help you..."></textarea>
                    </div>

                    <button type="submit" class="w-full bg-primary text-white font-bold py-4 px-8 rounded-lg hover:bg-primary-dark transition-all duration-300 transform hover:scale-105">
                        Send Message
                    </button>
                    <p class="text-sm text-zinc-500">* Required fields</p>
                </form>
            </div>

            <!-- Contact Information -->
            <div class="space-y-8">
                <!-- Club Details -->
                <div class="bg-white rounded-xl shadow-lg p-8">
                    <h2 class="text-2xl font-bold text-primary mb-6">Club Information</h2>
                    
                    <div class="space-y-6">
                        <div class="flex items-start space-x-4">
                            <svg class="h-6 w-6 text-secondary flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            <div>
                                <h3 class="font-semibold text-zinc-800">Location</h3>
                                <p class="text-zinc-600">Hastings Park<br>Marina Parade<br>Hastings, VIC, Australia</p>
                            </div>
                        </div>

                        <div class="flex items-start space-x-4">
                            <svg class="h-6 w-6 text-secondary flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                            <div>
                                <h3 class="font-semibold text-zinc-800">Email</h3>
                                <a href="mailto:info@peninsuladolphinsrlc.com.au" class="text-primary hover:text-primary-dark transition-colors duration-300">info@peninsuladolphinsrlc.com.au</a>
                            </div>
                        </div>

                        <div class="flex items-start space-x-4">
                            <svg class="h-6 w-6 text-secondary flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <div>
                                <h3 class="font-semibold text-zinc-800">Training Times</h3>
                                <p class="text-zinc-600">Season runs February - September<br>Training days and times to be confirmed</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="bg-zinc-100 rounded-xl p-8">
                    <h2 class="text-2xl font-bold text-zinc-800 mb-6">Quick Actions</h2>
                    
                    <div class="space-y-4">
                        <a href="/registration-form" class="block w-full bg-primary text-white font-bold py-3 px-6 rounded-lg hover:bg-primary-dark transition-all duration-300 text-center">
                            Register Your Child
                        </a>
                        <a href="/about" class="block w-full bg-zinc-200 text-zinc-800 font-semibold py-3 px-6 rounded-lg hover:bg-zinc-300 transition-all duration-300 text-center">
                            Learn About the Club
                        </a>
                        <a href="/sponsors" class="block w-full bg-zinc-200 text-zinc-800 font-semibold py-3 px-6 rounded-lg hover:bg-zinc-300 transition-all duration-300 text-center">
                            Sponsorship Opportunities
                        </a>
                    </div>
                </div>

                <!-- Social Media -->
                <div class="bg-white rounded-xl shadow-lg p-8">
                    <h2 class="text-2xl font-bold text-primary mb-6">Follow Us</h2>
                    
                    <div class="flex space-x-4">
                        <a href="https://www.facebook.com/peninsuladolphinsrugbyleagueclub" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center w-12 h-12 bg-zinc-100 rounded-lg hover:bg-primary hover:text-white transition-all duration-300" aria-label="Facebook">
                            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.494v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12v9.293h6.116c.73 0 1.323-.593 1.323-1.325v-21.35c0-.732-.593-1.325-1.325-1.325z"/></svg>
                        </a>
                        <a href="https://instagram.com/peninsula_dolphins_rlc" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center w-12 h-12 bg-zinc-100 rounded-lg hover:bg-primary hover:text-white transition-all duration-300" aria-label="Instagram">
                            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.85s-.012 3.584-.07 4.85c-.148 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07s-3.584-.012-4.85-.07c-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.85s.012-3.584.07-4.85c.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.85-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948s.014 3.667.072 4.947c.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072s3.667-.014 4.947-.072c4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.947s-.014-3.667-.072-4.947c-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.689-.073-4.948-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.162 6.162 6.162 6.162-2.759 6.162-6.162-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4s1.791-4 4-4 4 1.79 4 4-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44 1.441-.645 1.441-1.44c0-.795-.645-1.44-1.441-1.44z"/></svg>
                        </a>
                        <a href="https://tiktok.com/@peninsula.dolphins.rlc" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center w-12 h-12 bg-zinc-100 rounded-lg hover:bg-primary hover:text-white transition-all duration-300" aria-label="TikTok">
                            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/></svg>
                        </a>
                    </div>
                    
                    <p class="text-sm text-zinc-600 mt-4">Stay up to date with our latest news, training updates, and match results!</p>
                </div>
            </div>
        </div>
    </div>
</Layout>