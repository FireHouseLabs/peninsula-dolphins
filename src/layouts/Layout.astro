---
import '../styles/global.css';
import dolphinLogo from '../assets/dolphin.png';
import { SEO } from 'astro-seo';

export interface Props {
	title?: string;
	description?: string;
	image?: string;
	noindex?: boolean;
}

const { 
	title,
	description = "Peninsula Dolphins Rugby League Club - Building community, developing players, and growing the game on the Mornington Peninsula. Join our junior teams for the 2026 season!",
	image = "/android-chrome-512x512.png",
	noindex = false
} = Astro.props;

const siteTitle = title ? `${title} - Peninsula Dolphins RLFC` : 'Peninsula Dolphins RLFC';
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <SEO
        title={siteTitle}
        description={description}
        canonical={Astro.url}
        noindex={noindex}
        openGraph={{
            basic: {
                title: siteTitle,
                type: "website",
                image: new URL(image, Astro.url).toString(),
            },
            optional: {
                description: description,
                siteName: "Peninsula Dolphins RLFC",
                locale: "en_AU",
            },
            image: {
                alt: "Peninsula Dolphins Rugby League Club Logo",
            },
        }}
        twitter={{
            creator: "@peninsula_dolphins_rlc",
            site: "@peninsula_dolphins_rlc",
            card: "summary_large_image",
            title: siteTitle,
            description: description,
            image: new URL(image, Astro.url).toString(),
            imageAlt: "Peninsula Dolphins Rugby League Club Logo",
        }}
        extend={{
            meta: [
                {
                    name: "keywords",
                    content: "rugby league, peninsula, dolphins, mornington peninsula, junior rugby, kids rugby, hastings, victoria, australia, sports club, youth sports"
                },
                {
                    name: "author",
                    content: "Peninsula Dolphins Rugby League Club"
                },
                {
                    name: "robots",
                    content: noindex ? "noindex, nofollow" : "index, follow"
                },
                {
                    name: "theme-color",
                    content: "#981335"
                },
                {
                    name: "msapplication-TileColor",
                    content: "#981335"
                },
                {
                    property: "og:locale",
                    content: "en_AU"
                },
                {
                    property: "og:site_name",
                    content: "Peninsula Dolphins RLFC"
                }
            ],
            link: [
                {
                    rel: "icon",
                    type: "image/x-icon",
                    href: "/favicon.ico"
                },
                {
                    rel: "icon",
                    type: "image/png",
                    sizes: "16x16",
                    href: "/favicon-16x16.png"
                },
                {
                    rel: "icon",
                    type: "image/png",
                    sizes: "32x32",
                    href: "/favicon-32x32.png"
                },
                {
                    rel: "apple-touch-icon",
                    sizes: "180x180",
                    href: "/apple-touch-icon.png"
                },
                {
                    rel: "icon",
                    type: "image/png",
                    sizes: "192x192",
                    href: "/android-chrome-192x192.png"
                },
                {
                    rel: "icon",
                    type: "image/png",
                    sizes: "512x512",
                    href: "/android-chrome-512x512.png"
                }
            ]
        }}
    />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
</head>
<body class="text-zinc-800 bg-zinc-100 font-['Inter']">
    <!-- Header & Navigation -->
    <header class="bg-primary shadow-lg sticky top-0 z-50 text-white">
        <div class="container mx-auto px-6 py-4">
            <div class="flex items-center justify-between">
                <a href="/" class="flex items-center space-x-3">
                    <!-- Dolphin Logo -->
                    <img src={dolphinLogo.src} alt="Peninsula Dolphins Logo" class="h-10 w-auto">
                    <span class="text-xl font-extrabold tracking-tight">Peninsula Dolphins</span>
                </a>

                <!-- Desktop Navigation -->
                <nav class="hidden md:flex items-center space-x-6">
                    <a href="/" class="text-lg font-semibold hover:text-secondary transition-colors duration-300">Home</a>
                    <a href="/about" class="text-lg font-semibold hover:text-secondary transition-colors duration-300">About</a>
                    <a href="/news" class="text-lg font-semibold hover:text-secondary transition-colors duration-300">News</a>
                    <a href="/sponsors" class="text-lg font-semibold hover:text-secondary transition-colors duration-300">Sponsors</a>
                    <a href="/merch" class="text-lg font-semibold hover:text-secondary transition-colors duration-300">Merch</a>
                    <a href="/contact" class="text-lg font-semibold hover:text-secondary transition-colors duration-300">Contact</a>
                    <a href="/register" class="bg-secondary text-primary font-bold py-2 px-5 rounded-lg hover:bg-secondary-dark transition-colors duration-300">Register Now</a>
                </nav>

                <!-- Mobile Menu Button -->
                <button id="mobile-menu-button" class="md:hidden">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                    </svg>
                </button>
            </div>

            <!-- Mobile Menu -->
            <div id="mobile-menu" class="hidden md:hidden mt-4">
                 <a href="/" class="block py-2 text-lg font-semibold hover:text-secondary transition-colors duration-300">Home</a>
                 <a href="/about" class="block py-2 text-lg font-semibold hover:text-secondary transition-colors duration-300">About</a>
                 <a href="/news" class="block py-2 text-lg font-semibold hover:text-secondary transition-colors duration-300">News</a>
                 <a href="/sponsors" class="block py-2 text-lg font-semibold hover:text-secondary transition-colors duration-300">Sponsors</a>
                 <a href="/merch" class="block py-2 text-lg font-semibold hover:text-secondary transition-colors duration-300">Merch</a>
                 <a href="/contact" class="block py-2 text-lg font-semibold hover:text-secondary transition-colors duration-300">Contact</a>
                 <a href="/register" class="block mt-2 bg-secondary text-primary font-bold py-2 px-5 rounded-lg hover:bg-secondary-dark transition-colors duration-300 text-center">Register Now</a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main>
        <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-zinc-800 text-zinc-300">
        <div class="container mx-auto px-6 py-12">
            <div class="text-center">
                <p>&copy; 2024 Peninsula Dolphins Rugby League Club. All Rights Reserved.</p>
                <div class="flex justify-center space-x-4 mt-4">
                     <!-- Social Icons -->
                    <a href="https://www.facebook.com/peninsuladolphinsrugbyleagueclub" target="_blank" rel="noopener noreferrer" class="hover:text-white" aria-label="Facebook"><svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.494v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12v9.293h6.116c.73 0 1.323-.593 1.323-1.325v-21.35c0-.732-.593-1.325-1.325-1.325z"/></svg></a>
                    <a href="https://instagram.com/peninsula_dolphins_rlc" target="_blank" rel="noopener noreferrer" class="hover:text-white" aria-label="Instagram"><svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.85s-.012 3.584-.07 4.85c-.148 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07s-3.584-.012-4.85-.07c-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.85s.012-3.584.07-4.85c.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.85-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948s.014 3.667.072 4.947c.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072s3.667-.014 4.947-.072c4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.947s-.014-3.667-.072-4.947c-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.689-.073-4.948-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.162 6.162 6.162 6.162-2.759 6.162-6.162-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4s1.791-4 4-4 4 1.79 4 4-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44 1.441-.645 1.441-1.44c0-.795-.645-1.44-1.441-1.44z"/></svg></a>
                    <a href="https://tiktok.com/@peninsula.dolphins.rlc" target="_blank" rel="noopener noreferrer" class="hover:text-white" aria-label="TikTok"><svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/></svg></a>
                </div>
                <p class="text-sm text-zinc-400 mt-4">
                    Website designed and managed with love by <a href="https://firehouselabs.com.au" target="_blank" rel="noopener noreferrer" class="text-zinc-300 hover:text-white transition-colors duration-300">fireHouseLabs</a>
                </p>
            </div>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');

            // Toggle mobile menu
            mobileMenuButton?.addEventListener('click', () => {
                mobileMenu?.classList.toggle('hidden');
            });
        });
    </script>
</body>
</html>
