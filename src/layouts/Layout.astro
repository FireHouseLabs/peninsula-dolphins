---
import '../styles/global.css';
import dolphinLogo from '../assets/dolphin.png';

export interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title ? `${title} - Peninsula Dolphins RLFC` : 'Peninsula Dolphins RLFC'}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
</head>
<body class="text-zinc-800 bg-zinc-100 font-['Inter']">
    <!-- Header & Navigation -->
    <header class="bg-primary shadow-lg sticky top-0 z-50 text-white">
        <div class="container mx-auto px-6 py-4">
            <div class="flex items-center justify-between">
                <a href="/" class="flex items-center space-x-3">
                    <!-- Dolphin Logo -->
                    <img src={dolphinLogo.src} alt="Peninsula Dolphins Logo" class="h-10 w-auto">
                    <span class="text-xl font-extrabold tracking-tight">Peninsula Dolphins</span>
                </a>

                <!-- Desktop Navigation -->
                <nav class="hidden md:flex items-center space-x-6">
                    <a href="/" class="text-lg font-semibold hover:text-secondary transition-colors duration-300">Home</a>
                    <a href="/about" class="text-lg font-semibold hover:text-secondary transition-colors duration-300">About</a>
                    <a href="/sponsors" class="text-lg font-semibold hover:text-secondary transition-colors duration-300">Sponsors</a>
                    <a href="/merch" class="text-lg font-semibold hover:text-secondary transition-colors duration-300">Merch</a>
                    <a href="/register" class="bg-secondary text-primary font-bold py-2 px-5 rounded-lg hover:bg-secondary-dark transition-colors duration-300">Register Now</a>
                </nav>

                <!-- Mobile Menu Button -->
                <button id="mobile-menu-button" class="md:hidden">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                    </svg>
                </button>
            </div>

            <!-- Mobile Menu -->
            <div id="mobile-menu" class="hidden md:hidden mt-4">
                 <a href="/" class="block py-2 text-lg font-semibold hover:text-secondary transition-colors duration-300">Home</a>
                 <a href="/about" class="block py-2 text-lg font-semibold hover:text-secondary transition-colors duration-300">About</a>
                 <a href="/sponsors" class="block py-2 text-lg font-semibold hover:text-secondary transition-colors duration-300">Sponsors</a>
                 <a href="/merch" class="block py-2 text-lg font-semibold hover:text-secondary transition-colors duration-300">Merch</a>
                 <a href="/register" class="block mt-2 bg-secondary text-primary font-bold py-2 px-5 rounded-lg hover:bg-secondary-dark transition-colors duration-300 text-center">Register Now</a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main>
        <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-zinc-800 text-zinc-300">
        <div class="container mx-auto px-6 py-12">
            <div class="text-center">
                <p>&copy; 2024 Peninsula Dolphins Rugby League Club. All Rights Reserved.</p>
                <div class="flex justify-center space-x-4 mt-4">
                     <!-- Social Icons -->
                    <a href="#" class="hover:text-white"><svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.494v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12v9.293h6.116c.73 0 1.323-.593 1.323-1.325v-21.35c0-.732-.593-1.325-1.325-1.325z"/></svg></a>
                    <a href="#" class="hover:text-white"><svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.85s-.012 3.584-.07 4.85c-.148 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07s-3.584-.012-4.85-.07c-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.85s.012-3.584.07-4.85c.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.85-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948s.014 3.667.072 4.947c.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072s3.667-.014 4.947-.072c4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.947s-.014-3.667-.072-4.947c-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.689-.073-4.948-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.162 6.162 6.162 6.162-2.759 6.162-6.162-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4s1.791-4 4-4 4 1.79 4 4-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44 1.441-.645 1.441-1.44c0-.795-.645-1.44-1.441-1.44z"/></svg></a>
                </div>
            </div>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');

            // Toggle mobile menu
            mobileMenuButton?.addEventListener('click', () => {
                mobileMenu?.classList.toggle('hidden');
            });
        });
    </script>
</body>
</html>
